<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilActivity">

    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grad"
        >
        <RelativeLayout
            android:id="@+id/imgUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/circleBorder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/prime"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:background="@drawable/circle"
                android:layout_margin="9dp"
                android:padding="3dp"
                android:contentDescription="TODO" />


        </RelativeLayout>

        <TextView
            android:id="@+id/profil_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ardion Massaid"
            android:layout_below="@id/imgUser"
            android:layout_centerHorizontal="true"
            android:textSize="32dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/profil_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:textAllCaps="true"
            android:layout_below="@id/profil_name"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/address"
            android:fontFamily="sans-serif-smallcaps"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_margin="15dp"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"/>




    </RelativeLayout>



    <LinearLayout
        android:id="@+id/linlay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rellay1"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/followersBg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="453"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="FOLLOWERS"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/followers"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textSize="25dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="FOLLOWING"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linlay1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sex"
                android:textColor="@color/headings"
                android:textSize="13dp"
                android:background="#D5E5F3"/>
            <TextView
                android:id="@+id/profil_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kelamin"
                android:textSize="18dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="job"
                android:textColor="@color/headings"
                android:textSize="13dp"
                android:background="#D5E5F3"/>
            <TextView
                android:id="@+id/profil_job"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="programing"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number"
                android:textColor="@color/headings"
                android:textSize="13dp"
                android:background="#D5E5F3"/>
            <TextView
                android:id="@+id/profil_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="085745686773"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birth of date"
                android:textColor="@color/headings"
                android:textSize="13dp"
                android:background="#D5E5F3"/>
            <TextView
                android:id="@+id/profil_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Juni 1997"
                android:textSize="18dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Birth of place"
                android:textColor="@color/headings"
                android:textSize="13dp"
                android:background="#D5E5F3"/>
            <TextView
                android:id="@+id/profil_birthplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Madiun"
                android:textSize="18dp"
                android:textColor="#000000"/>




        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>